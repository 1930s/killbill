RESOURCES_DIR = "src/main/resources"
KILLBILL_ROOT_PACKAGE = "com/ning/billing"
DDL_SQL_FILE = "ddl.sql"

ddl = ""
["account", "beatrix", "entitlement", "invoice", "junction", "payment", "tenant", "usage", "util"].each do |kmodule|
  ddl_file = "#{kmodule}/#{RESOURCES_DIR}/#{KILLBILL_ROOT_PACKAGE}/#{kmodule}/#{DDL_SQL_FILE}"
  ddl << (%x[/usr/bin/curl -skSfL "https://raw.github.com/killbill/killbill/master/#{ddl_file}"])
end

puts ddl
